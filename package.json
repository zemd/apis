{
  "name": "apis",
  "private": true,
  "scripts": {
    "prebuild": "turbo telemetry disable",
    "build": "turbo build",
    "dev": "turbo dev",
    "generate": "turbo generate-api",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "release": "pnpm run build && changeset publish",
    "changeset": "changeset",
    "test": "turbo test",
    "test-http-client": "turbo test --filter @zemd/http-client",
    "prepare": "husky",
    "lint-publint": "pnpm --filter \"./packages/*\" --filter \"./apis/*\" --no-bail run lint-publint"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@zemd/eslint-ts": "^1.0.41",
    "@zemd/tsconfig": "^1.5.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "publint": "^0.3.16",
    "turbo": "^2.7.2"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a"
}
